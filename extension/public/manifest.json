{
  "manifest_version": 3,
  "name": "BrainPlus",
  "version": "1.0.0",
  "description": "Your AI-powered knowledge assistant with local RAG, semantic search, and Ask Me Anything",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/index.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage",
    "alarms",
    "offscreen",
    "idle",
    "tabs",
    "nativeMessaging"
  ],
  "optional_permissions": [
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "https://*/*"
  ],
  "optional_host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "offscreen/index.html",
        "wasm/*.wasm",
        "wasm/*.data"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}

